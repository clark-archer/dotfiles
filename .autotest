# vim:ft=ruby

EXPIRATION_IN_SECONDS = 5
ERROR_ICON = 'gtk-dialog-error'
SUCCESS_ICON = 'gtk-dialog-info'

def notify(title, results, icon)
   options = "-t #{EXPIRATION_IN_SECONDS * 1000} -i #{icon}"
   system "notify-send #{options} '#{title}' '#{results}'"
end

Autotest.add_hook :red do |autotest|
   notify "This shit's broke", autotest.results, ERROR_ICON
end

Autotest.add_hook :green do |autotest|
   notify "Snootchie-bootchies!", autotest.results, SUCCESS_ICON
end
